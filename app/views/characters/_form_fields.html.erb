<div class="form-group row">
  <%= form.label :name, class: 'col-sm-2 text-center h4' %>
  <div class="col-sm-10">
    <%= form.text_field :name, id: :character_name, class: 'form-control' %>
  </div>
</div>

<div class="form-group row">
  <%= form.label :race, class: 'col-sm-2 text-center h4' %>
  <div class="col-sm-10">
    <%= form.text_field :race, id: :character_race, class: 'form-control' %>
  </div>
</div>

<div class="form-group row">
  <%= form.label :description, class: 'col-sm-2 text-center h4' %>
  <div class="col-sm-10">
    <%= form.text_field :description, id: :character_description, class: 'form-control' %>
  </div>
</div>

<div class="form-group row">
  <%= form.label :biography, class: 'col-sm-2 text-center h4' %>
  <div class="col-sm-10">
    <%= form.text_area :biography, id: :character_biography, class: 'form-control' %>
  </div>
</div>

<div class="form-group row">
  <%= form.label :avatar, class: 'col-sm-2 text-center h4' %>
  <div class="col-sm-10">
    <%= form.file_field :avatar, id: :character_avatar, class: 'form-control' %>
  </div>
</div>

<div class="actions">
  <%= form.submit class: 'btn btn-dark text-light pull-right' %>
</div>
