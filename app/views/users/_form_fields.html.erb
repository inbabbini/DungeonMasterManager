<fieldset>
  <legend><%= @user.new_record? ? t('button.register') : t('legend.editing', model: User.model_name.human) %></legend>
  <% if @user.new_record? %>
  <div class="form-group row">
    <%= form.label :email, class: 'col-sm-2 control-label' %>
    <div class="col-sm-10">
      <%= form.email_field :email, id: :user_email, class:'form-control' %>
    </div>
  </div>
  <% end %>
  <div class="form-group row">
    <%= form.label :name, class: 'col-sm-2 control-label' %>
    <div class="col-sm-10">
      <%= form.text_field :name, id: :user_name, class:'form-control' %>
    </div>
  </div>
  <div class="form-group row">
    <%= form.label :picture, class: 'col-sm-2 text-center h4' %>
    <div class="col-sm-10">
      <%= form.file_field :picture, id: :user_picture, class: 'form-control' %>
    </div>
  </div>
  <div class="form-group row">
    <%= form.label :password, class: 'col-lg-2 control-label' %>
    <div class="col-sm-10">
      <%= form.password_field :password, id: :user_password, class:'form-control' %>
    </div>
  </div>
  <div class="form-group row">
    <%= form.label :password_confirmation, class: 'col-lg-2 control-label' %>
    <div class="col-sm-10">
      <%= form.password_field :password_confirmation, id: :user_password_confirmation, class:'form-control' %>
    </div>
  </div>
  <%= form.submit @user.new_record? ? t('button.register') : t('button.save'), class: 'btn btn-dark pull-right' %>
</fieldset>
