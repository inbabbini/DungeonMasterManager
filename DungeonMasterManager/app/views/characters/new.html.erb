<div class="row">
  <div class="col-sm-2">
    <%= link_to 'Back to Game', game_path(@game), class: 'btn btn-block btn-dark text-light' %>
  </div>

  <div class="col-sm-8">
    <legend>New Character</legend>

    <%= form_with(model: @character, url: game_characters_path(@game), local: true, class: 'form-horizontal') do |form| %>
      <%= render 'form_errors', character: @character %>
      <%= render 'form_fields', form: form %>
    <% end %>
  </div>
</div>
