<div class="row justify-content-center">
  <div class="col-8">
    <%= form_for(:game, url: games_register_path, method: 'post', class: 'form-horizontal') do |f| %>
      <fieldset>
        <legend>Join Game</legend>
        <div class="form-group row">
          <%= f.label :secret_key, class: 'col-sm-2 control-label' %>
          <div class="col-sm-10">
            <%= f.text_field :secret_key, id: :game_secret_key, placeholder: 'secret key', class:'form-control' %>
          </div>
        </div>
        <%= f.submit "Join", class: 'btn btn-dark pull-right' %>
      </fieldset>
    <% end %>
  </div>
</div>
