<div class="row">
  <div class="col-md-2 col-xs-12">
    <%= link_to 'New Game', new_game_path, class: 'btn btn-success text-light btn-block' %>
    <%= link_to 'Join Game', games_join_path, class: 'btn btn-primary text-light btn-block' %>
  </div>
  <div class="col-md-4 col-xs-12">
    <legend>Mastered Games</legend>
    <table class="table table-responsive table-striped table-hover">
      <thead class="thead-inverse">
        <tr>
          <th>Name</th>
          <th colspan="3">Options</th>
        </tr>
      </thead>

      <tbody>
        <% @mastered_games.each do |game| %>
          <tr>
            <td><%= game.name %></td>
            <td><%= link_to 'Show', game %></td>
            <td><%= link_to 'Edit', edit_game_path(game) %></td>
            <td><%= link_to 'Destroy', game, method: :delete, data: { confirm: 'Are you sure?' } %></td>
          </tr>
        <% end %>
      </tbody>
    </table>
  </div>

  <div class="col-md-4 col-xs-12">
    <legend>Played Games</legend>
    <table class="table table-responsive table-striped table-hover">
      <thead class="thead-inverse">
        <tr>
          <th>Name</th>
          <th colspan="3">Options</th>
        </tr>
      </thead>

      <tbody>
        <% @played_games.each do |game| %>
          <tr>
            <td><%= game.name %></td>
            <td><%= link_to 'Show', game %></td>
          </tr>
        <% end %>
      </tbody>
    </table>
  </div>

</div>
