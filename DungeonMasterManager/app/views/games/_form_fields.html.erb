<fieldset>
  <div class="form-group row">
    <%= form.label :name, class: 'col-sm-2 text-center h4' %>
    <div class="col-sm-10">
      <%= form.text_field :name, id: :game_name %>
    </div>
  </div>

  <div class="form-group row">
    <%= form.label :secret_key, class: 'col-sm-2 text-center h4' %>
    <div class="col-sm-10">
      <%= form.text_field :secret_key, id: :game_secret_key %>
    </div>
  </div>

  <div class="actions">
    <%= form.submit class: 'btn btn-dark text-light pull-right' %>
  </div>

</fieldset>
