<div class="row justify-content-center">
  <div class="col-4">
    <%= form_for(:session, url: login_path, method: 'post', class: 'form-horizontal') do |f| %>
      <fieldset>
        <legend><%= t('legend.login') %> <p class="h5 pull-right"> <%= link_to t('button.register'), new_user_path %> </p></legend>
        <div class="form-group row">
          <%= f.label :email, class: 'col-sm-2 control-label' %>
          <div class="col-sm-10">
            <%= f.text_field :email, id: 'email', placeholder: 'example@domain.com', class:'form-control' %>
          </div>
        </div>
        <div class="form-group row">
          <%= f.label :password, class: 'col-lg-2 control-label' %>
          <div class="col-sm-10">
            <%= f.password_field :password, id: 'password', class:'form-control' %>
          </div>
        </div>
        <%= f.submit "Login", class: 'btn btn-dark pull-right' %>
      </fieldset>
    <% end %>
    <legend><%= t('legend.social_login') %></legend>
    <%= link_to t('button.login_with', provider: 'Google'), 'google_login', class:'btn btn-danger btn-block text-light' %>
  </div>
</div>
