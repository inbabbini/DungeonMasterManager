<div class="row">
  <div class="col-sm-2">
    <%= link_to t('button.show', page: Character.model_name.human), game_character_path(@game, @character), class: 'btn btn-block btn-dark text-light' %>
  </div>

  <div class="col-sm-8">
    <legend><%= t('legend.new', model: Item.model_name.human) %></legend>

    <%= form_with(model: @item, url: game_character_items_path(@game, @character), local: true) do |form| %>
      <% render 'form_errors', item: @item %>
      <% render 'form_fields', form: form %>
    <% end %>
  </div>
</div>
