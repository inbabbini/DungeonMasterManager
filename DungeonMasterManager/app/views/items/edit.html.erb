<div class="row">
  <div class="col-sm-2">
    <%= link_to 'Back to Character', game_character_path(@game, @character), class: 'btn btn-block btn-dark text-light' %>
  </div>

  <div class="col-sm-8">
    <legend>Editing Item</legend>

    <%= form_with(model: item, url: game_character_item_path(@game, @character, @item) local: true) do |form| %>
      <% render 'form_errors', item: @item %>
      <% render 'form_fields', form: form %>
    <% end %>
  </div>

</div>
