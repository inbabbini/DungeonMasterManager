<fieldset>
  <div class="form-group row">
    <%= form.label :name, class: 'col-sm-2 text-center h4' %>
    <div class="col-sm-2">
      <%= form.text_field :name, id: :item_name %>
    </div>
  </div>

  <div class="form-group row">
    <%= form.label :description, class: 'col-sm-2 text-center h4' %>
    <div class="col-sm-2">
      <%= form.text_field :description, id: :item_description %>
    </div>
  </div>

  <div class="form-group row">
    <%= form.label :quantity, class: 'col-sm-2 text-center h4' %>
    <div class="col-sm-2">
      <%= form.number_field :quantity, id: :item_quantity %>
    </div>
  </div>

  <div class="actions">
    <%= form.submit class: 'btn btn-dark text-light pull-right' %>
  </div>
</fieldset>
