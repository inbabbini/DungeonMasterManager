<fieldset>
  <div class="field">
    <%= form.label :title, class: 'col-sm-2 text-center h4' %>
    <div class="col-sm-10">
      <%= form.text_field :title, id: :note_title %>
    </div>
  </div>

  <div class="field">
    <%= form.label :content, class: 'col-sm-2 text-center h4' %>
    <div class="col-sm-10">
      <%= form.text_area :content, id: :note_content %>
    </div>
  </div>

  <div class="actions">
    <%= form.submit class: 'btn btn-dark text-light pull-right' %>
  </div>
</fieldset>
