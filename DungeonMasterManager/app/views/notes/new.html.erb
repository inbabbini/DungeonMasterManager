<div class="row">
  <div class="col-sm-2">
    <%= link_to 'Back to Character', game_character_path(@game, @character), class: 'btn btn-block btn-dark text-light' %>
  </div>

  <div class="col-sm-8">
    <legend>New Note</legend>
    <%= form_with(model: @note, url: game_character_notes_url(@game, @character), local: true) do |form| %>
      <%= render 'form_errors', note: @note %>
      <%= render 'form_fields', form: form  %>
    <% end %>
  </div>

</div>
