<div class="row">
  <div class="col-sm-2">
    <%= link_to 'Back to Character', game_character_path(@game, @character), class: 'btn btn-block btn-dark text-light' %>
  </div>

  <div class="col-sm-8">
    <legend>Editing Skill</legend>

    <%= form_with(model: skill, url: game_character_skill_path(@game, @character, @skill), local: true) do |form| %>
      <%= render 'form_errors', skill: @skill %>
      <%= render 'form_fields', form: form %>
    <% end %>
  </div>

</div>
