<div class="row">
  <div class="col-sm-2">
    <%= link_to t('button.back', page: t('model.campaign_note')), game_campaign_notes_path(@game), class: 'btn btn-block btn-dark text-light' %>
  </div>

  <div class="col-sm-8">
    <legend><%= t('legend.editing', model: t('model.campaign_note')) %></legend>

    <%= form_with(model: @campaign_note, url: game_campaign_notes_url(@game), local: true, class: 'form-horizontal') do |form| %>
      <%= render 'form_errors', campaign_note: @campaign_note %>
      <%= render 'form_fields', form: form %>
    <% end %>
  </div>

</div>
