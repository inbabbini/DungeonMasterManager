<fieldset>
  <div class="form-group row">
    <%= form.label :title, class: 'col-sm-2 text-center h4' %>
    <div class="col-sm-10">
      <%= form.text_field :title, id: :campaign_note_title, class: 'form-control' %>
    </div>
  </div>

  <div class="form-group row">
    <%= form.label :content, class: 'col-sm-2 text-center h4' %>
    <div class="col-sm-10">
      <%= form.text_area :content, id: :campaign_note_content, class: 'form-control' %>
    </div>
  </div>

  <div class="form-group row">
    <%= form.label :visible_by_players, class: 'col-sm-2 text-center h4' %>
    <div class="col-sm-10">
      <%= form.check_box :visible_by_players, id: :campaign_note_visible_by_players, class: 'form-control' %>
    </div>
  </div>

  <div class="form-group row">
    <%= form.label :dm_annotation, class: 'col-sm-2 text-center h4' %>
    <div class="col-sm-10">
      <%= form.text_field :dm_annotation, id: :campaign_note_dm_annotation, class: 'form-control' %>
    </div>
  </div>

  <div class="form-group row">
    <%= form.label :text, class: 'col-sm-2 text-center h4' %>
    <div class="col-sm-10">
      <%= form.text_field :text, id: :campaign_note_text, class: 'form-control' %>
    </div>
  </div>

  <div class="actions">
    <%= form.submit class: 'btn btn-dark text-light pull-right' %>
  </div>
</fieldset>
