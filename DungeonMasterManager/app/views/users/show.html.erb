<div class="row justify-content-center">
	<div class="col-6">
		<legend> <%= t('legend.my_information') %> </legend>
		<div>
				<%= image_tag @user.picture.url(:normal), class: "img-thumbnail rounded mx-auto d-block" %>
		</div>
		<ul class="list-group">
			<li class="list-group-item">
				<b><%= User.human_attribute_name('name') %>:</b> <%= @user.name %>
			</li>
			<li class="list-group-item">
				<b><%= User.human_attribute_name('email') %>:</b> <%= @user.email %>
			</li>
			<li class="list-group-item">
				<b><%= User.human_attribute_name('created_at') %>: </b> <%= time_tag(@user.created_at) %>
			</li>
		</ul>
		<%= link_to t('button.edit', model: User.model_name.human), edit_user_path(@user), class: "btn btn-sm btn-primary text-light" %>
		<%= link_to t('button.destroy', model: User.model_name.human), user_path(@user), class: "btn btn-sm btn-danger text-light", method: :delete, data: { confirm: 'Are you sure?' } %>
	</div>
</div>
