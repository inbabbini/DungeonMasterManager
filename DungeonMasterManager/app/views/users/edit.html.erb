<div class="row">
  <div class="col-2">
    <%= link_to 'Back to User', user_path(@user), class: 'btn btn-block btn-dark text-light'%>
  </div>
  <div class="col-8">
    <%= form_with(model: @user, method: 'post', class: 'form-horizontal') do |form| %>
      <%= render 'form_errors', user: @user %>
      <fieldset>
        <legend>Editing User</legend>
        <div class="form-group row">
          <%= form.label :name, class: 'col-sm-2 control-label' %>
          <div class="col-sm-10">
            <%= form.text_field :name, id: :user_name, class:'form-control' %>
          </div>
        </div>
        <div class="form-group row">
          <%= form.label :password, class: 'col-lg-2 control-label' %>
          <div class="col-sm-10">
            <%= form.password_field :password, id: :user_password, class:'form-control' %>
          </div>
        </div>
        <div class="form-group row">
          <%= form.label :password_confirmation, class: 'col-lg-2 control-label' %>
          <div class="col-sm-10">
            <%= form.password_field :password_confirmation, id: :user_password_confirmation, class:'form-control' %>
          </div>
        </div>
        <%= form.submit "Save", class: 'btn btn-success pull-right' %>
      </fieldset>
    <% end %>
  </div>
</div>
