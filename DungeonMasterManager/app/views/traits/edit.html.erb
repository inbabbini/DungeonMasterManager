<div class="row">
  <div class="col-sm-2">
    <%= link_to 'Back to Game', game_character_path(@game, @character), class: 'btn btn-block btn-dark text-light' %>
  </div>

  <div class="col-sm-8">
    <legend>Editing Trait</legend>

    <%= form_with(model: @trait, url: game_character_trait_path(@game, @character, @trait), local: true) do |form| %>
      <%= render 'form_errors', trait: @trait %>
      <%= render 'form_fields', form: form %>
    <% end %>
  </div>

</div>
